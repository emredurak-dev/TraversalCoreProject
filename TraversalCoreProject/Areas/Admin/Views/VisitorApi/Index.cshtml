@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>api ziyaretci listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>ad</th>
        <th>soyad</th>
        <th>sehir</th>
        <th>ulke</th>
        <th>email</th>
        <th>sil</th>
        <th>guncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.VisitorId</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Email</td>
            <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId" class="btn btn-danger">sil</a></td>
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId" class="btn btn-info">guncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-primary">yeni ziyaretci</a>
