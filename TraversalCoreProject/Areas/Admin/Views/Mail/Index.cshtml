@model TraversalCoreProject.Models.MailRequest
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>yeni mail gonderme sayfasi</h1>

<form method="post">
	<div class="form-group">
		@Html.Label("alici mail adresi")
		<input type="text" asp-for="ReceiverMail" class="form-control" />
	</div>
	<br />

	<div class="form-group">
		@Html.Label("konu basligi")
		<input type="text" asp-for="Subject" class="form-control" />
	</div>
	<br />

	<div class="form-group">
		@Html.Label("mesaj icerigi")
		<textarea cols="30" rows="5" asp-for="Body" class="form-control" ></textarea>
	</div>
	<br />

<button class="btn btn-outline-primary">mail gonder</button>
</form>

