@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>cqrs tur rotasi verileri</h1>

<br />

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <th>sehir</th>
        <th>gun gece</th>
        <th>fiyat</th>
        <th>kapasite</th>
        <th>sil</th>
        <th>guncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.id</th>
            <td>@item.city</td>
            <td>@item.daynight</td>
            <td>@item.price</td>
            <td>@item.capacity</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.id" class="btn btn-outline-danger">sil</a></td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.id" class="btn btn-outline-warning">guncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-primary">yeni tur rotasi girisi</a>