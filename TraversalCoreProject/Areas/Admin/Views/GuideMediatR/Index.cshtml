@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>cqrs mediatr rehber listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>rehber adi</th>
        <th>aciklama</th>
        <th>sil</th>
        <th>guncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideId</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a href="#" class="btn btn-outline-danger">sil</a>
            </td>
            <td>
                <a href="/Admin/GuideMediatR/GetGuide/@item.GuideId" class="btn btn-outline-info">guncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/GuideMediatR/AddGuide" class="btn btn-primary">yeni rehber girisi</a>