	</div>
	<br />
	<div class="form-group">
		@Html.Label("gun/gece")
		<input type="text" asp-for="DayNight" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("fiyat")
		<input type="text" asp-for="Price" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("ana gorsel")
		<input type="text" asp-for="Image" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("kapasite")
		<input type="text" asp-for="Capacity" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("kapak gorseli")
		<input type="text" asp-for="CoverImage" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("gorsel 2")
		<input type="text" asp-for="Image2" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("aciklama")
		<textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
	</div>
	<br />
	<div class="form-group">
		@Html.Label("detay 1")
		<textarea cols="30" rows="5" class="form-control" asp-for="Details1"></textarea>
	</div>
	<br />
	<div class="form-group">
		@Html.Label("detay 2")
		<textarea cols="30" rows="5" class="form-control" asp-for="Details2"></textarea>
	</div>
	<br />
	<button class="btn btn-outline-primary">guncelle</button>
</form>
