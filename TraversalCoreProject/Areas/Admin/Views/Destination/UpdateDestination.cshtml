@model EntityLayer.Concrete.Destination
@{
	ViewData["Title"] = "UpdateDestination";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>rota guncelleme sayfasi</h1>

<form method="post">
	<input type="hidden" asp-for="DestinationId" />
	<div class="form-group">
		@Html.Label("sehir")
